//intersection/union belief/goal to diff question/quest
    (W --> (A&B)), W, --is(A,"--"), --is(B,"--")  |- (W --> (A-B)), (Punctuation:Ask)
     //(W --> (A|B)), W |- (W --> (A-B)), (Punctuation:Ask)
    ((A|B) --> W), W, --is(A,"--"), --is(B,"--")  |- ((A~B) --> W), (Punctuation:Ask)
     //((A&B) --> W), W |- ((A~B) --> W), (Punctuation:Ask)

//diff belief/goal to swapped diff question
    (W --> (A-B)), W, --is(A,"--"), --is(B,"--")  |- (W --> (B-A)), (Punctuation:Ask)
    ((A~B) --> W), W, --is(A,"--"), --is(B,"--")  |- ((B~A) --> W), (Punctuation:Ask)

